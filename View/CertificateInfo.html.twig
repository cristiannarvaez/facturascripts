{% extends "Master/MenuTemplate.html.twig" %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-certificate fa-fw"></i> Información del Certificado Digital
                </div>
                <div class="card-body">
                    {% if fsc.views.CertificateInfo.model and fsc.views.CertificateInfo.model.certificado_path %}
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Estado del Certificado</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Archivo:</strong></td>
                                        <td>
                                            <code>{{ fsc.views.CertificateInfo.model.certificado_path }}</code>
                                            {% if fsc.views.CertificateInfo.certificateExists %}
                                                <span class="badge badge-success ml-2">Encontrado</span>
                                            {% else %}
                                                <span class="badge badge-danger ml-2">No encontrado</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Contraseña:</strong></td>
                                        <td>
                                            {% if fsc.views.CertificateInfo.model.certificado_password %}
                                                <span class="badge badge-success">Configurada</span>
                                            {% else %}
                                                <span class="badge badge-warning">No configurada</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6>Acciones</h6>
                                <div class="btn-group-vertical d-block">
                                    <button type="submit" name="action" value="validate-certificate" class="btn btn-primary btn-sm mb-2">
                                        <i class="fas fa-check-circle"></i> Validar Certificado
                                    </button>
                                    <button type="submit" name="action" value="test-connection" class="btn btn-info btn-sm">
                                        <i class="fas fa-globe"></i> Probar Conexión DIAN
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Certificado no configurado</strong>
                            <p class="mb-0">Sube tu certificado .p12 a MyFiles y configura la ruta.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}